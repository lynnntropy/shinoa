// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model KeyValueItem {
  key   String @id
  value Json
}

model Quote {
  id        Int     @id @default(autoincrement())
  guildId   String
  userId    String
  messageId String? @unique
  message   Json
}

model Mute {
  id       Int      @id @default(autoincrement())
  guildId  String
  memberId String
  endsAt   DateTime
}

model Poll {
  id         String @id
  guildId    String
  channelId  String
  messsageId String
  votes      Vote[]
}

model Vote {
  id     Int    @id @default(autoincrement())
  poll   Poll   @relation(fields: [pollId], references: [id])
  pollId String
  userId String

  @@unique([pollId, userId])
}
