// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model KeyValueItem {
  key   String @id
  value Json
}

model Quote {
  id        Int     @id @default(autoincrement())
  guildId   String
  userId    String
  messageId String? @unique
  message   Json
}

model Mute {
  id       Int      @id @default(autoincrement())
  guildId  String
  memberId String
  endsAt   DateTime
}

model Poll {
  id         Int     @id @default(autoincrement())
  guildId    String
  localId    String
  name       String
  channelId  String
  messsageId String  @unique
  active     Boolean @default(true)
  options    Json
  votes      Vote[]

  @@unique([guildId, localId])
}

model Vote {
  id     Int    @id @default(autoincrement())
  poll   Poll   @relation(fields: [pollId], references: [id])
  pollId Int
  userId String
  value  String

  @@unique([pollId, userId])
}

model StarboardItem {
  id                 Int    @id @default(autoincrement())
  guildId            String
  messageId          String @unique
  starboardMessageId String
}
